<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.puneetchugh.kailashrestaurant.MainActivity"
    tools:showIn="@layout/activity_main">


    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_gravity="center"
        android:id="@+id/imageView"
        android:scaleType="fitXY"
        android:src="@drawable/kailash"

        />

    <android.support.v7.widget.GridLayout
        android:layout_below="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rowCount="7"
        app:columnCount="2"


        >


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="75dp"
            android:text="Name      : "
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_row="1"
            app:layout_column="0"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Kailash Restaurant"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:layout_row="1"
            app:layout_column="1"
            />

        <TextView
            android:layout_height="wrap_content"

            android:layout_width="75dp"
            android:text="Details    : "
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_row="2"
            app:layout_column="0"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="It's an exotic Indian Restaurant."
            android:textColor="@color/colorPrimary"

            android:textSize="16sp"

            app:layout_column="1"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Buffet is available everyday in Lunch."
            android:textColor="@color/colorPrimary"
            app:layout_row="3"
            android:textSize="16sp"

            app:layout_column="1"/>
        <TextView
            android:layout_height="wrap_content"

            android:layout_width="75dp"
            android:text="Hours     : "
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_row="4"
            app:layout_column="0"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Mon-Fri 11am-10pm"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:layout_column="1"

            />
        <TextView
            app:layout_column="1"
            app:layout_row="5"
            android:text="Sat-Sun 11am-8pm"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:layout_height="wrap_content"

            android:layout_width="75dp"
            android:text="Website :"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_row="6"
            app:layout_column="0"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="http://www.kailashindiancuisine.com"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:onClick="openKailashWeb"
            app:layout_column="1"

            />


    </android.support.v7.widget.GridLayout>
</RelativeLayout>
